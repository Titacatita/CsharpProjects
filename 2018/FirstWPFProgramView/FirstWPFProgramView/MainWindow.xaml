<UserControl x:Class="QuantBook1.Ch01.FirstWPFProgramView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock 
                x:Name="txBlock" Margin="5" TextAlignment="Center" 
                Text =" Hello WPF"/>
            <TextBox 
                x:Name="txBox" Margin="5" Width="100" TextAlignment="Center" 
                TextChanged="txBox_TextChanged"/>
            <Button 
                x:Name="btnChangeColor" Margin="5" Width="100" 
                Content="Change Text Color" Click="btnChangeColor_Click"/>
            <Button 
                x:Name="btnChangeSize" Margin="5" Width="100" 
                Content="Change Text Size" Click="btnChangeSize_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
